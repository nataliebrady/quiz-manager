<%= semantic_form_for @quiz do |f| %>
  <% f.inputs do %>
    <%= f.label :title, "Quiz title" %>
    <%= f.input :title %>
    <div id='questions'>
    <% i = 0 %>
      <%= f.semantic_fields_for :questions do |question| %>
        <%= render 'question_fields', :f => question, :i => i %>
          <%= i = i + 1 %>
      <% end %>
      <div class='links'>
        <%= link_to_add_association 'add question', f, :questions %>
      </div>
    </div>
    <%= f.actions do %>
      <%= f.action :submit, :as => :button %>
    <% end %>
  <% end %>
<% end %>